\define deref(tid) <$transclude tiddler=<<__tid__>> field="caption" />
<$list filter="[all[current]]">
<div style="padding-bottom: 4px;">
  <div style="float:left;">
    <$link to={{!!previous}} tooltip=<<deref {{!!previous}}>> >{{!!previous}}</$link>
  </div>
  <div style="float:right;">
    <$link to={{!!next}} tooltip=<<deref {{!!next}}>> >{{!!next}}</$link>
  </div>
</div>
</$list>